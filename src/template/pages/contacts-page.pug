		//begin requisites
		+b.SECTION.requisites(style='background-image: url(static/img/bg/requisites_bg.jpg)')
			+e.container.container
				+e.location
					+e.location-title
						h3 Наш центр расположен в одном из современных районов Москвы, всего в 600 метрах от станции метро Каховская.
					+e.location-images
						+e.location-img
							+e.IMG(src='static/img/content/requisites-1.jpg' alt='image')
						+e.location-img
							+e.IMG(src='static/img/content/requisites-2.jpg' alt='image')

				+e.inner
					+b.section-title.requisites__section-title
						+e.top
							h2 Реквизиты организации
						+e.back
							h2 Requisites

