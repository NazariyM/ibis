						titleList = [
						'Полное наименование:',
						'Адрес юридический:',
						'Адрес почтовый:',
						'Банковские реквизиты:',
						'КПП:',
						'ОГРН:',
						'ОКПО:',
						'ОКАТО:',
						'Наименование банка:',
						'Р/счет:',
						'К/счет:',
						'ИНН:',
						'БИК:'
						]

					-
						descrList = [
						'Общество с ограниченной ответственностью «ИБИС»',
						'117452, г. Москва, ул. Азовская, д.15, помещение I',
						'117452, г. Москва, ул. Азовская, д.15, помещение I',
						'ИНН: 7727295543',
						'772701001',
						'1167746659354',
						'03517755',
						'45293562000',
						'АО «Тинькофф Банк», г. Москва ',
						'­40702810110000017646',
						'­30101810145250000974',
						'7710140679',
						'044525974'
						]

					mixin reqItem(index)
						+e.requisites-item
							+e.requisites-item-title
								p= titleList[index]
							+e.requisites-item-descr
								p= descrList[index]

					each el, index in titleList
						+reqItem(index)
		//end requisites

		//begin cost-contact
		+b.SECTION.cost-contact._contacts(style='background-image: url(static/img/bg/cost-contact_bg.jpg)')
			+e.container.container
				+e.inner
					+b.section-title.cost-contact__section-title
						+e.top
							h2 Узнайте стоимость обучения прямо сейчас и получите Сертификат на скидку
						+e.back
							h2 Cost of education

					+e.form-wrap
						+cost-form('_map', 'Узнать стоимость', 'Телефон')
		//end cost-contact